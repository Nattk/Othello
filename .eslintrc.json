{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "react-app",
        "plugin:react/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unmodified-loop-condition": 0,
        "react/prop-types": 0
    }
}